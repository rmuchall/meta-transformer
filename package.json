{
  "name": "meta-transformer",
  "version": "1.0.0",
  "description": "meta-transformer",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./build",
    "lint": "eslint --config .eslintrc.js ./src ./test",
    "test": "jest --coverage",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:es2020",
    "build:cjs": "tsc --project tsconfig-release.json --module commonjs --target es5 --outDir build/cjs",
    "build:esm": "tsc --project tsconfig-release.json --module es2020 --target es5 --outDir build/esm",
    "build:es2020": "tsc --project tsconfig-release.json --module es2020 --target es2020 --outDir build/es2020",
    "copy": "cpy ./package.json ./README.md ./LICENSE.md ./build",
    "postversion": "git push && git push --tags",
    "release": "npm run lint && npm run test && npm run build && npm version patch && npm run copy && npm publish ./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmuchall/meta-transformer.git"
  },
  "keywords": [
    "transformer"
  ],
  "author": "Rob Muchall <rmuchall@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmuchall/meta-transformer/issues"
  },
  "homepage": "https://github.com/rmuchall/meta-transformer#readme",
  "devDependencies": {
    "@types/jest": "28.1.1",
    "@types/node": "17.0.42",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "cpy-cli": "4.1.0",
    "eslint": "8.17.0",
    "jest": "28.1.1",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.4",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  },
  "dependencies": {}
}
